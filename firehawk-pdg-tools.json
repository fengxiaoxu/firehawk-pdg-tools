{
    "env" : [
        {
            "FIREHAWK_PDG_TOOLS" : "$HOUDINI_PACKAGE_PATH/firehawk-pdg-tools"
        },
        {
            "PYTHONPATH" : {
                "method" : "append",
                "value" : ["$FIREHAWK_PDG_TOOLS/scripts/modules"]
            }
        },
        {
            "HOUDINI_SCRIPT_PATH" : {
                "method" : "prepend",
                "value" : ["$FIREHAWK_PDG_TOOLS"]
            }
        },
        {
            "HOUDINI_PATH" : {
                "method" : "prepend",
                "value" : ["$FIREHAWK_PDG_TOOLS"]
            }
        },
        {
            "HOUDINI_MENU_PATH" : {
                "method" : "prepend",
                "value" : ["$FIREHAWK_PDG_TOOLS/scripts/menus"]
            }
        },
        {
            "HOUDINI_OTLSCAN_PATH" : {
                "method" : "prepend",
                "value" : ["$FIREHAWK_PDG_TOOLS/hda"]
            }
        }
    ]
}